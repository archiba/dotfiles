#!/usr/bin/env bash
me=$0
dir_in=$1
files=`ls -1 ${dir_in}`
replacer="s/:/-/g"
echo "Replacer: ${replacer}"
for f in ${files}; do
    if [ -d ${f} ] ; then
        ${me} "${dir_in}/${f}"
    else
        new_f=$(echo ${f} | sed -e ${replacer})
        if [ "$f" != "$new_f" ] ; then
            echo "moving ${f} to ${new_f}"
            mv -n -v "${dir_in}/${f}" "${dir_in}/${new_f}"
        fi
    fi
done
